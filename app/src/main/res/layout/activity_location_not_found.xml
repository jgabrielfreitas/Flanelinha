<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.manta.activity.LocationNotFoundActivity">

    <TextView
        android:layout_marginLeft="@dimen/half_default_margin_between_views"
        android:layout_marginRight="@dimen/half_default_margin_between_views"
        android:textColor="@color/note_gray_background"
        android:gravity="center"
        android:text="@string/location_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/locationNotFoundTextView" />

    <TextView
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textColor="@color/dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":("
        android:textSize="60sp"
        android:id="@+id/textView4"
        android:layout_above="@+id/locationNotFoundTextView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
