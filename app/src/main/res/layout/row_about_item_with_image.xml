<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:paddingRight="@dimen/default_margin_between_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/github_logo"
        android:id="@+id/about_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_source"
        android:id="@+id/about_title"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark_light_blue"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/about_image_view"
        android:layout_toEndOf="@+id/about_image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_in_github"
        android:id="@+id/about_sub_title"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/text_secundary"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/about_title"
        android:layout_alignLeft="@+id/about_title"
        android:layout_alignStart="@+id/about_title" />


</RelativeLayout>