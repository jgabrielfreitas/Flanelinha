<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="#00FFFFFF">

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_margin="8dp"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowRadius="2"
        android:shadowColor="#000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_checkin"
        android:id="@+id/widgetCheckinButton"
        android:textColor="#fff"
        android:background="@drawable/button_card_selector"
        android:layout_marginLeft="@dimen/default_margin_between_views"
        android:layout_marginRight="@dimen/default_margin_between_views"
        android:layout_marginBottom="@dimen/half_default_margin_between_views"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quick_checkin"
        android:id="@+id/textView3"
        android:textStyle="italic"
        android:layout_marginLeft="@dimen/default_margin_between_views"
        android:layout_marginTop="@dimen/half_default_margin_between_views"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowRadius="2"
        android:shadowColor="#000" />

</RelativeLayout>